<style>
  /* body {
    background-color: #FFCCCC;
  } */


  ul {
    /* Make child elements padding  */
    padding: 0;
    /* Remove default list styling */
    list-style: none;
    /* Make sure the images are responsive */
    /* display: flex; */
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;

  }

  body {
    /* Make half widht */
    /* Center the content */
    margin: auto;
    background: linear-gradient(-45deg, #f5d8d0a1, #ffcbdfda, #fad9d18f);
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
  }

  .bodybody {
    width: 80%;
    /* Center the content */
    margin: auto;
    margin-top: 8em;
  }

  .card {
    box-shadow: 0 4px 8px 0 #861615;
    margin-bottom: 3rem;
    background-color: #861615;
  }

  .card-body {
    margin-right: 10em !important;
  }

  img {
    position: absolute !important;
    width: 15%;
    /* Move to right */
    right: 0;
    /* Move up */
    top: 0;
    /* Displace some pixels */
  }


  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }

    100% {
      background-position: 0% 50%;
    }
  }
</style>

